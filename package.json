{
  "name": "zotero-syllabus",
  "type": "module",
  "version": "0.4.5",
  "description": "Zotero Syllabus Plugin",
  "config": {
    "addonName": "Zotero Syllabus",
    "addonID": "syllabus@janbaykara.com",
    "addonRef": "syllabus",
    "addonInstance": "Syllabus",
    "prefsPrefix": "extensions.zotero.syllabus"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/janbaykara/zotero-syllabus.git"
  },
  "author": "Jan Baykara <janbaykara@pm.me>",
  "bugs": {
    "url": "https://github.com/janbaykara/zotero-syllabus/issues"
  },
  "homepage": "https://github.com/janbaykara/zotero-syllabus#readme",
  "license": "AGPL-3.0-or-later",
  "packageManager": "pnpm@10.25.0",
  "scripts": {
    "build:css": "node scripts/build-css.js",
    "watch:css": "npx @tailwindcss/cli -i ./src/tailwind.css -o ./addon/content/tailwind.css --watch",
    "start": "concurrently \"pnpm watch:css\" \"zotero-plugin serve\"",
    "build": "NODE_ENV=production pnpm build:css && NODE_ENV=production pnpm zotero-plugin build && NODE_ENV=production pnpm tsc --noEmit",
    "lint:check": "prettier --check . && eslint .",
    "lint:fix": "prettier --write . && eslint . --fix",
    "release": "NODE_ENV=production zotero-plugin release",
    "test": "zotero-plugin test",
    "update-deps": "pnpm update --save"
  },
  "dependencies": {
    "concurrently": "^9.2.1",
    "date-fns": "^4.1.0",
    "lodash-es": "^4.17.22",
    "lru-cache": "^11.2.4",
    "lucide-preact": "^0.562.0",
    "pluralize": "^8.0.0",
    "preact": "^10.19.3",
    "slugify": "^1.6.6",
    "superjson": "^2.2.6",
    "tailwind-merge": "^3.4.0",
    "uuidv7": "^1.1.0",
    "verzod": "^0.4.0",
    "zod": "^3.25.76",
    "zotero-plugin-toolkit": "^5.1.0-beta.13"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "@types/chai": "^5.2.3",
    "@types/lodash-es": "^4.17.12",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.10.0",
    "@types/pluralize": "^0.0.33",
    "@zotero-plugin/eslint-config": "^0.6.7",
    "chai": "^6.2.1",
    "eslint": "^9.39.2",
    "mocha": "^11.7.5",
    "postcss": "^8.5.6",
    "prettier": "^3.7.4",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "zotero-plugin-scaffold": "^0.8.2",
    "zotero-types": "^4.1.0-beta.4"
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "endOfLine": "lf",
    "overrides": [
      {
        "files": [
          "*.xhtml"
        ],
        "options": {
          "htmlWhitespaceSensitivity": "css"
        }
      }
    ]
  }
}
